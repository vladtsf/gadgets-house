.container.b-product
  .row
    h1 Товар
  form
    fieldset
      .row
        legend Основное

        .span6
          //- name
          .control-group
            label.control-label Название
            input(type="text", name="name", placeholder="Название", value="")

          //- category
          .control-group
            label.control-label Категория
            input.b-category-select(name="category", type="text", autocomplete="off", placeholder="Категория", data-provide="typeahead", data-source=locals.categoriesSource, data-items=4)

          //- manufacturer
          .control-group
            label.control-label Производитель
            input.b-manufacturers-autocomplete( type="text", name="manufacturer", placeholder="Производитель", data-provide="typeahead", data-items="4" )

          //- price
          .control-group
            label.control-label Цена
            input(type="text", name="price", placeholder="Цена", value="")

        .span6
          //- photo
          .control-group
            .control-group
              label.control-label Фото
              .uploaded-photo-placeholder
              br
              .upload-photo

          //- publish
          .control-group
            label.control-label Опубликовать
            .b-published.b-toggle-button
              input(type="checkbox", checked=false, name="published")

          //- on stock
          .control-group
            label.control-label Наличие
            .b-published.b-toggle-button
              input(type="checkbox", checked=true, name="onStock")

          //- description
          .control-group
            label.control-label Описание
            textarea(name="description", placeholder="Описание", rows="3")

      .row
        .span12
          legend Дополнительно
          //- additional
          .b-custom-fields

      .row
        .span12
          legend Фотографии
          //- photos
          .control-group
            .upload-photos.pull-right
            br

          .control-group
            ul.uploaded-photos-placeholder.thumbnails

      .row
        .span12
          legend Действия
          .control-group
            button.b-product__save.btn.btn-primary(type="submit", name="save", value="on") Сохранить
            if locals._id
              &nbsp;
              button.b-category__delete.btn(type="button", name="delete", value="on") Удалить

