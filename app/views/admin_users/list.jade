extends ../layouts/admin

block append content
  div.container

    h1 Пользователи

    .row
      table.table.table-bordered.table-striped
        thead
          tr
            th id
            th email
            th роли
        tbody
          each user in users
            tr
              td
                a(href="/admin/users/#{ user._id }")
                  i.icon-user
                  &nbsp;
                  = user._id
              td= user.email
              td
                span.label.label-important Пользователь
                each role in user.roles
                  &nbsp;
                  span.label.label-important= ({1: "Администратор"})[ role ]
